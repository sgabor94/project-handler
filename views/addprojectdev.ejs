<% include header.ejs %>
<div class="container">
    <div class="page-header" id="banner">
        <div class="row">
            <div class="col-lg-8 col-md-7 col-sm-6">
                <h2>Developers on project <%= project.name %></h2>
                <br/>
                <form class="form-horizontal" enctype="multipart/form-data">
                    <fieldset>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Project name</label>
                            <div class="col-lg-6">
                                <input type="text"
                                        <% if (typeof project !== 'undefined' && project) { %>
                                       value="<%= project.name %>"
                                        <% } %>
                                       class="form-control" disabled="disabled" title="name"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Required manday</label>
                            <div class="col-lg-6">
                                <input type="number"
                                        <% if (typeof project !== 'undefined' && project) { %>
                                       value="<%= project.manday %>"
                                        <% } %>
                                       class="form-control" disabled="disabled" title="reqManday"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Developers</label>
                            <div class="col-lg-10"><a href="adddevtoproject/<%= project.id %>" class="btn btn-xs btn-primary"
                                                      onclick="return confirm('Are you sure you want to delete this item?');">x</a><span> Itt van már pár developer...</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-6 col-lg-offset-2">
                                <div class="input-group">
                                    <select name="developerId" class="form-control" title="developers">
                                        <% for (project in projects) { var item = project %>
                                        <option value="<%= projects[item].developers.firstname %>"><%= projects[item].developers.skill.name %></option>
                                        <% } %>
                                    </select>
                                    <span class="input-group-btn">
									<button href="/projects" type="submit"
                                            class="btn btn-default">Add to project</button>
								</span>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
<% include footer.ejs %>