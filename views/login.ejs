            <div class="form-group row col-md-12 text-center">
                <a href="/login">Forgotten password</a>
            </div>
            <div class="form-group row col-md-12 text-center">
                <div>
                    <input id="btn-login" href="/developers" class="btn btn-success" type="button" value="Login"/>
