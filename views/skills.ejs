<% include header.ejs %>
<div class="container">
    <div class="page-header" id="banner">
        <div class="row">
            <div class="col-lg-6 col-md-7 col-sm-6">

                <h3>Add a skill</h3>
                <br/>
                <form action="/skills/add" method="post" class="form-horizontal">
                    <div class="alert alert-danger">
                        <p>Please correct errors</p>
                        <br/>
                        <div>
                            <ul>
                                <li>
                                    Error detail
                                </li>
                            </ul>
                        </div>
                    </div>
                    <fieldset>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Skill name</label>
                            <div class="col-lg-9">
                                <input id="name" type="text"
                                        <% if (typeof skill == 'object' && skill) { %>
                                       value="<%= skill.name %>"
                                        <% } %>
                                       class="form-control" name="name"
                                       title="name"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Description</label>
                            <div class="col-lg-9">
                                <input id="description" type="text"
                                        <% if (typeof skill == 'object' && skill) { %>
                                       value="<%= skill.description %>"
                                        <% } %>
                                       class="form-control" name="description" title="description"/>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-12 col-lg-offset-3">
                                <% if (typeof skill !== 'undefined'){ %>
                                <input type="submit" class="btn btn-primary" value="Update"/>
                                <% }else{ %>
                                <input type="submit" class="btn btn-primary" value="Create"/>
                                <% } %>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h2 class="panel-title">Skills</h2>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="thead-inverse">
                        <tr>
                            <th>Skill name</th>
                            <th>Description</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        <% for (key in skills) { var skill = skills[key]; %>
                        <tr>
                            <td><%= skill.name %></td>
                            <td><%= skill.description %></td>
                            <td>
                                <a href="/skills/delete/<%= skill._id %>" class="btn btn-danger glyphicon glyphicon-trash"
                                   onclick="return confirm('Are you sure you want to delete this item?');"></a>
                            </td>
                        </tr>
                        <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<% include footer.ejs %>