<% include header.ejs %>
<div class="container">
    <div class="page-header" id="banner">
        <div class="row">
            <div class="col-lg-6 col-md-7 col-sm-6">

                <h3>Add a developer</h3>
                <h3>OR</h3>
                <h3>Update developer</h3>
                <br/>
                <form enctype="multipart/form-data" class="form-horizontal">
                    <div class="alert alert-danger">
                        <p>Please correct errors</p>
                        <br/>
                        <div>
                            <ul>
                                <li>
                                    Error detail
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">First name</label>
                        <div class="col-lg-9">
                            <input id="firstName" type="text"
                                    <% if (typeof developer !== 'undefined' && developer) { %>
                                   value="<%= developer.firstname %>"
                                    <% } %>
                                   class="form-control" name="firstName"
                                   title="firstName"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Last name</label>
                        <div class="col-lg-9">
                            <input id="lastName" type="text"
                                    <% if (typeof developer !== 'undefined' && developer) { %>
                                   value="<%= developer.lastname %>"
                                    <% } %>
                                   class="form-control" name="lastName" title="lastName"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Comment</label>
                        <div class="col-lg-9">
                            <input id="comment" type="text" class="form-control" name="comment" title="comment"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Email</label>
                        <div class="col-lg-9">
                            <input id="email" type="email"
                                    <% if (typeof developer !== 'undefined' && developer) { %>
                                   value="<%= developer.email %>"
                                    <% } %>
                                   class="form-control" name="email" title="email"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Developer Level</label>
                        <div class="col-lg-9">
                            <select title="developerLevel" class="form-control">
                                <option>Junior</option>
                                <option>Mid-senior</option>
                                <option>Senior</option>
                                <option>Expert</option>
                            </select>

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12 col-lg-offset-3">
                            <button type="submit" class="btn btn-primary" name="button">Create
                            </button>
                        </div>
                        <div class="col-lg-12 col-lg-offset-3">
                            <button type="submit" class="btn btn-primary" name="button">Update
                            </button>
                            <a id="btn-cook" class="btn btn-warning"
                               role="button">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 col-md-7 col-sm-6">
                <h3>Developers</h3>
                <br/>
                <form method="get" enctype="multipart/form-data" class="form-horizontal">
                    <fieldset>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">First name</label>
                            <div class="col-lg-9">
                                <input id="firstNameFilter" type="text"
                                        <% if (typeof developer !== 'undefined' && developer) { %>
                                       value="<%= developer.firstname %>"
                                        <% } %>
                                       class="form-control" name="firstNameFilter"
                                       title="firstNameFilter"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Last name</label>
                            <div class="col-lg-9">
                                <input id="lastNameFilter" type="text"
                                        <% if (typeof developer !== 'undefined' && developer) { %>
                                       value="<%= developer.lastname %>"
                                        <% } %>
                                       class="form-control" name="lastNameFilter"
                                       title="lastNameFilter"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-12 col-lg-offset-3">
                                <button href="/developers" type="submit" class="btn btn-primary">Filter
                                </button>
                            </div>
                        </div>
                    </fieldset>
                </form>
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Developer level</th>
                        <th>Skills</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    <% for (key in developers) { var developer = developers[key]; %>
                    <tr>
                        <td><span><%= developer.firstname %></span></td>
                        <td><span><%= developer.lastname %></span></td>
                        <td><span><%= developer.email %></span></td>
                        <td><span><%= developer.level %></span></td>
                        <td><span><%= developer.skills %></span></td>
                        <td>
                            <a href="/addskilltodev/:id" class="btn btn-success">Skills</a>
                            <a href="/developers" class="btn btn-primary">Edit</a>
                            <a href="/developers" class="btn btn-danger"
                               onclick="return confirm('Are you sure you want to delete this item?');"><span
                                        class="glyphicon glyphicon-trash"></span></a>
                        </td>
                    </tr>
                    <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<% include footer.ejs %>